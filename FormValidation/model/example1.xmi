<?xml version="1.0" encoding="UTF-8"?>
<formValidation:ValidationClass
    xmi:version="2.0"
    xmlns:xmi="http://www.omg.org/XMI"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xmlns:formValidation="http://www.example.org/formValidation"
    xsi:schemaLocation="http://www.example.org/formValidation formValidation.ecore"
    name="custInfForm"
    label="Custumer information form">
  <classattribute
      name="accountNo"
      label="Account No"
      maser="true">
    <attributetype>
      <uiComponent
          xsi:type="formValidation:InputNumber"
          tooltip="Insert account number"/>
      <datatype
          xsi:type="formValidation:PrimitiveDataType"
          type="Number"/>
    </attributetype>
    <attributerule
        xsi:type="formValidation:MinNumber"
        value="1.0"/>
  </classattribute>
  <classattribute
      name="name"
      label="Name"
      maser="true">
    <attributetype>
      <uiComponent
          xsi:type="formValidation:TextInput"
          tooltip="Insert your name"
          placeHolder="Your name"/>
      <datatype
          xsi:type="formValidation:PrimitiveDataType"/>
    </attributetype>
    <attributerule
        xsi:type="formValidation:MinLength"
        value="2"/>
    <attributerule
        xsi:type="formValidation:StringPattern"
        value="A-Za-z+"/>
  </classattribute>
  <classattribute
      name="dob"
      label="DOB"
      maser="true">
    <attributetype>
      <uiComponent
          xsi:type="formValidation:DateUIComponent"/>
      <datatype
          xsi:type="formValidation:PrimitiveDataType"
          type="Date"/>
    </attributetype>
  </classattribute>
  <classattribute
      name="phoneNo"
      label="Phone no">
    <attributetype>
      <uiComponent
          xsi:type="formValidation:TelInput"/>
      <datatype
          xsi:type="formValidation:PrimitiveDataType"/>
    </attributetype>
  </classattribute>
  <classattribute
      name="address"
      label="Address">
    <attributetype>
      <uiComponent
          xsi:type="formValidation:TextArea"
          numOfRows="3"/>
      <datatype
          xsi:type="formValidation:PrimitiveDataType"/>
    </attributetype>
  </classattribute>
  <classattribute
      name="district"
      label="District">
    <attributetype>
      <datatype
          xsi:type="formValidation:PrimitiveDataType"/>
    </attributetype>
  </classattribute>
  <classattribute
      name="state"
      label="State">
    <attributetype>
      <uiComponent
          xsi:type="formValidation:DropDownList"/>
      <datatype
          xsi:type="formValidation:PrimitiveDataType"/>
    </attributetype>
    <attributerule
        xsi:type="formValidation:AcceptableValuesString">
      <values>Serbia</values>
      <values>USA</values>
      <values>Croatia</values>
      <values>Germany</values>
    </attributerule>
  </classattribute>
  <classattribute
      name="gender"
      label="Gender">
    <attributetype>
      <uiComponent
          xsi:type="formValidation:RadioButton"
          orientation="Horizontal"/>
      <datatype
          xsi:type="formValidation:PrimitiveDataType"/>
    </attributetype>
    <attributerule
        xsi:type="formValidation:AcceptableValuesString">
      <values>Female</values>
      <values>Male</values>
    </attributerule>
  </classattribute>
  <classattribute
      name="maritalStat"
      label=" Marital status">
    <attributetype>
      <uiComponent
          xsi:type="formValidation:RadioButton"
          orientation="Horizontal"/>
      <datatype
          xsi:type="formValidation:PrimitiveDataType"/>
    </attributetype>
  </classattribute>
  <classattribute
      name="mothersName"
      label="Mother's name">
    <attributetype>
      <uiComponent
          xsi:type="formValidation:TextInput"/>
      <datatype
          xsi:type="formValidation:PrimitiveDataType"/>
    </attributetype>
  </classattribute>
  <classattribute
      name="fathersName"
      label="Father's name">
    <attributetype>
      <datatype
          xsi:type="formValidation:PrimitiveDataType"/>
    </attributetype>
  </classattribute>
  <classattribute
      name="balance"
      label="Balance">
    <attributetype>
      <datatype
          xsi:type="formValidation:PrimitiveDataType"
          type="Number"/>
    </attributetype>
  </classattribute>
  <formlayout
      xsi:type="formValidation:Grid"
      numOfColumns="2"/>
</formValidation:ValidationClass>
